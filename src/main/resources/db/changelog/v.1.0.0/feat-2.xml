<?xml version="1.0" encoding="UTF-8" ?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">

    <changeSet id="categories" author="Rustamscode">
        <createTable tableName="categories"
                     remarks="Stores data about categories of financial transactions">

            <column name="id" type="UUID"
                    remarks="Category ID (UUID)">
                <constraints primaryKey="true" nullable="false" primaryKeyName="pk_categories"/>
            </column>

            <column name="user_id" type="UUID"
                    remarks="User ID (UUID)">
                <constraints nullable="false" foreignKeyName="fk_user_category"
                             referencedTableName="users" referencedColumnNames="id" deleteCascade="true"/>
            </column>

            <column name="name" type="VARCHAR(128)" remarks="Category name">
                <constraints nullable="false"/>
            </column>

            <column name="info" type="VARCHAR(512)" remarks="Category information and details"/>

            <column name="created_date" type="TIMESTAMPTZ"
                    remarks="Category date and time">
                <constraints nullable="false"/>
            </column>

            <column name="last_modified_date" type="TIMESTAMP"
                    remarks="Category last modified date">
            </column>

            <column name="is_deleted" type="BOOLEAN"
                    remarks="Category deletion status for soft deletes">
            </column>

            <column name="version" type="BIGINT"
                    remarks="Version for optimistic locking (JPA)">
                <constraints nullable="false"/>
            </column>

        </createTable>

        <addUniqueConstraint tableName="categories" columnNames="user_id, name"
                             constraintName="uq_category_user_name"/>

        <createIndex tableName="categories" indexName="idx_category_user_id">
            <column name="user_id"/>
        </createIndex>
    </changeSet>

    <changeSet id="add-column-category_id-in-transactions" author="Rustamscode">
        <addColumn tableName="transactions">
            <column name="category_id" type="UUID">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>

</databaseChangeLog>